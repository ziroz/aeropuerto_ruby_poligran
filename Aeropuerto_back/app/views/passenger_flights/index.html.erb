<p id="notice"><%= notice %></p>

<h1>Listing Passenger Flights</h1>

<table>
  <thead>
    <tr>
      <th>Passenger</th>
      <th>Flight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passenger_flights.each do |passenger_flight| %>
      <tr>
        <td><%= passenger_flight.passenger %></td>
        <td><%= passenger_flight.flight %></td>
        <td><%= link_to 'Show', passenger_flight %></td>
        <td><%= link_to 'Edit', edit_passenger_flight_path(passenger_flight) %></td>
        <td><%= link_to 'Destroy', passenger_flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


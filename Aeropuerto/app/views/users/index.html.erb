<p id="notice"><%= notice %></p>

<h1>Lista de Usuarios</h1>

<table class="table table-responsed table-striped table-hover">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Usuario</th>
      <th>Email</th>
      <th>Contraseña</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.user_name %></td>
      <td><%= user.email %></td>
      <td>●●●●●●●●●</td>
      <td><%= user.status ? 'Activo' : 'Inactivo' %></td>
      <td class="actions">
        <%= link_to(user) do %>
        <%= fa_icon("eye", text: "Detalle") %>
        <% end %>
      </td>
      <td class="actions">
        <%= link_to(edit_user_path(user)) do %>
        <%= fa_icon("pencil", text: "Editar") %>
        <% end %>
      </td>
      <td class="actions">
        <% if(@users.size > 1) %>
        <%= link_to(user, method: :delete, data: { confirm: '¿Está seguro de eliminar el Usuario?' }) do %>
        <%= fa_icon("times", text: "Eliminar") %>
        <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%= link_to(new_user_path) do %>
  <%= fa_icon("plus-circle", text: "Agregar nuevo Usuario") %>
  <% end %>

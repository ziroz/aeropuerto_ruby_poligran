<!DOCTYPE html>
<html>
<head>
	<title>Aeropuerto</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-dark bg-inverse">
		<button class="navbar-toggler nav-link hidden-sm-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar2" aria-controls="exCollapsingNavbar2" aria-expanded="false" aria-label="Toggle navigation" style="color: white;">
			&#9776;
		</button>
		<div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
			<a class="navbar-brand" href="#">Aeropuerto Ziroz</a>
			<ul class="nav navbar-nav">
				<li class="nav-item">
        			<%= link_to 'Vuelos', flights_path, class: "nav-link" %>
				</li>
				<li class="nav-item">
        			<%= link_to 'Aviones', airplanes_path, class: "nav-link" %>
				</li>
			</ul>
		</div>
	</nav>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
